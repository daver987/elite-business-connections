{
  "name": "elite-business-connections",
  "author": "David Robertson",
  "description": "The front facing website for Elite Business Connections",
  "homepage": "https://elitebusinessconnections.ca",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node .output/server/index.mjs",
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "release": "pnpm run lint:fix && changelogen --release && git push --follow-tags",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss",
      "prettier-plugin-organize-attributes"
    ],
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@formkit/auto-animate": "^0.8.1",
    "@nuxt/devtools": "latest",
    "@nuxt/image": "1.3.0",
    "@nuxtjs/google-fonts": "^3.1.3",
    "@sendgrid/mail": "^8.1.1",
    "@splidejs/vue-splide": "^0.6.12",
    "@tailwindcss/typography": "^0.5.10",
    "@tiptap/pm": "^2.2.4",
    "@tiptap/starter-kit": "^2.2.4",
    "@tiptap/vue-3": "^2.2.4",
    "@types/ws": "^8.5.10",
    "chalk": "^5.3.0",
    "nuxt": "^3.10.3",
    "nuxt-icon": "^0.6.8",
    "nuxt-svgo": "^4.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "prisma": "^5.10.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vue": "^3.4.19",
    "vue-router": "^4.3.0",
    "zod": "^3.22.4"
  },
  "dependencies": {
    "@nuxt/ui": "^2.14.1",
    "@prisma/client": "^5.10.2"
  },
  "engines": {
    "node": "20.x"
  }
}
